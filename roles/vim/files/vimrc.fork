"
" Short Stack spf13-vim .fork config
"

" .vimrc {
  " Map <Esc> to jj
  :inoremap jj <Esc>

  " Use ; as :
  nnoremap ; :

  " Map leader
  let mapleader = ","

  " indent every line in the file with <,I>
  nnoremap <Leader>i mmgg=G`m

  " Removes trailing spaces when vim writes
  function! TrimWhiteSpace()
    %s/\s\+$//e
  endfunction

  " tmux line theme
  let g:tmuxline_theme = 'icebert'
" }
